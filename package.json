{
    "name": "nestjs-boilerplate",
    "version": "0.0.1",
    "description": "",
    "author": "",
    "private": true,
    "license": "UNLICENSED",
    "scripts": {
        "serve": "cross-env NODE_ENV=local nodemon --exec ts-node -r tsconfig-paths/register --files ./src/app.ts",
        "test": "jest",
        "test:dev": "cross-env NODE_ENV=test TS_NODE_FILES=true mocha --exit -timeout 3000 -r tsconfig-paths/register -r ts-node/register ./test/**/*.test.ts",
        "build": "nest build"
    },
    "dependencies": {
        "@js-joda/core": "5.6.3",
        "@nestjs-cls/transactional": "^2.6.1",
        "@nestjs-cls/transactional-adapter-typeorm": "^1.2.18",
        "@nestjs/common": "9.2.0",
        "@nestjs/config": "3.3.0",
        "@nestjs/core": "9.2.0",
        "@nestjs/platform-express": "9.2.0",
        "@nestjs/swagger": "7.4.2",
        "@nestjs/typeorm": "9.0.1",
        "@types/uuid": "10.0.0",
        "class-transformer": "0.5.1",
        "class-validator": "0.14.1",
        "mysql2": "3.9.1",
        "nest-winston": "1.9.7",
        "nestjs-cls": "^5.4.2",
        "reflect-metadata": "0.1.13",
        "rxjs": "7.8.1",
        "typeorm": "0.3.10",
        "typeorm-naming-strategies": "4.1.0",
        "uuid": "10.0.0",
        "winston": "3.15.0",
        "winston-daily-rotate-file": "5.0.0"
    },
    "devDependencies": {
        "@nestjs/cli": "9.2.0",
        "@nestjs/schematics": "9.2.0",
        "@nestjs/testing": "9.2.0",
        "@types/express": "4.17.17",
        "@types/jest": "29.5.2",
        "@types/node": "22.7.5",
        "@types/supertest": "2.0.12",
        "@types/winston": "2.4.4",
        "@typescript-eslint/eslint-plugin": "5.59.11",
        "@typescript-eslint/parser": "5.59.11",
        "cross-env": "7.0.3",
        "eslint": "8.42.0",
        "eslint-config-prettier": "8.8.0",
        "eslint-plugin-prettier": "4.2.1",
        "jest": "29.5.0",
        "prettier": "2.8.8",
        "source-map-support": "0.5.21",
        "supertest": "6.3.3",
        "ts-jest": "29.1.0",
        "ts-loader": "9.4.3",
        "ts-node": "10.9.1",
        "tsconfig-paths": "4.2.0",
        "typescript": "^5.5.0"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "src",
        "testRegex": ".*\\.spec\\.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "collectCoverageFrom": [
            "**/*.(t|j)s"
        ],
        "coverageDirectory": "../coverage",
        "testEnvironment": "node",
        "moduleNameMapper": {
            "^@core/(.*)$": "<rootDir>/core/$1",
            "^@shared/(.*)$": "<rootDir>/shared/$1",
            "^@config/(.*)$": "<rootDir>/config/$1",
            "^@common/(.*)$": "<rootDir>/common/$1",
            "^@modules/(.*)$": "<rootDir>/modules/$1",
            "^@domain/(.*)$": "<rootDir>/domain/$1"
        }
    }
}
